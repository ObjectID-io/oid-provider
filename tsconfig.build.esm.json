{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "sourceMap": true,
    "noEmitOnError": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
